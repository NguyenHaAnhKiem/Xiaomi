<div class="sa4d25">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <form method="POST" enctype="multipart/form-data" id="frmCreate">
                    <div class="step-content">
                        <div class="step-tab-panel step-tab-info active" id="tab_step1">
                            <div class="tab-from-content">
                                <div class="title-icon">
                                    <h3 class="title"><i class="uil uil-info-circle"></i>Thông tin chung
                                    </h3>
                                </div>
                                <div class="course__form">
                                    <div class="general_info10">
                                        <div class="row">
                                            <div class="col-lg-6 col-md-6">
                                                <div class="ui search focus mt-30 lbel25">
                                                    <input type="hidden" name="Category" id="txtCategory">
                                                    <input type="hidden" name="price" id="txtPrice">
                                                    <input type="hidden" name="numbLecture" id="txtNumbLecture">
                                                    <label>Tên sản phẩm*</label>
                                                    <div class="ui left icon input swdh19">
                                                        <input class="prompt srch_explore" type="text"
                                                            placeholder="Thêm tên sản phẩm" name="title"
                                                            data-purpose="edit-course-title" maxlength="60" id="title"
                                                            value="">
                                                        <div class="badge_num">60</div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-md-12">
                                                <div class="course_des_textarea mt-30 lbel25">
                                                    <label>Chi tiết sản phẩm*</label>
                                                    <div class="textarea_dt">
                                                        <div class="ui form swdh339">
                                                            <div class="field">
                                                                <textarea rows="5" name="description" id="description"
                                                                    placeholder="Chi tiết sản phẩm"></textarea>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="price_course">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="price_title">
                                                    <h4><i class="uil uil-dollar-sign-alt"></i>Định giá</h4>
                                                </div>
                                            </div>

                                            <div class="col-lg-3 col-md-4 col-sm-6">
                                                <div class="mt-30 lbel25">
                                                    <label>Lựa chọn*</label>
                                                </div>
                                                <select class="ui hj145 dropdown cntry152 prompt srch_explore"
                                                    id="priceCourse">
                                                    <option value="">Chọn</option>
                                                    <option value="0">Miễn phí</option>
                                                    <option value="1">99.000đ</option>
                                                    <option value="2">199.000đ</option>
                                                    <option value="3">299.000đ</option>
                                                    <option value="4">399.000đ</option>
                                                    <option value="5">499.000đ</option>
                                                    <option value="6">599.000đ</option>
                                                    <option value="7">699.000đ</option>
                                                    <option value="8">799.000đ</option>
                                                    <option value="9">899.000đ</option>
                                                    <option value="10">999.000đ</option>
                                                    <option value="11">1.099.000đ</option>
                                                    <option value="12">1.199.000đ</option>
                                                    <option value="13">1.299.000đ</option>
                                                    <option value="14">1.399.000đ</option>
                                                    <option value="15">1.499.000đ</option>
                                                    <option value="16">1.599.000đ</option>
                                                    <option value="17">1.699.000đ</option>
                                                    <option value="18">1.799.000đ</option>
                                                    <option value="19">1.899.000đ</option>
                                                    <option value="20">1.999.000đ</option>
                                                    <option value="21">2.099.000đ</option>
                                                    <option value="22">2.199.000đ</option>
                                                    <option value="23">2.299.000đ</option>
                                                    <option value="24">2.399.000đ</option>
                                                    <option value="25">2.499.000đ</option>
                                                    <option value="26">2.599.000đ</option>
                                                    <option value="27">2.699.000đ</option>
                                                    <option value="28">2.799.000đ</option>
                                                    <option value="29">2.899.000đ</option>
                                                    <option value="30">2.999.000đ</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="step-tab-panel step-tab-gallery" id="tab_step2">
                            <div class="tab-from-content">
                                <div class="title-icon">
                                    <h3 class="title"><i class="uil uil-image-upload"></i>View</h3>
                                </div>
                                <div class="course__form">
                                    <div class="view_info10">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="view_all_dt">
                                                    <div class="view_img_left">
                                                        <h4>Ảnh bìa</h4>
                                                        <p>Tải lên hình ảnh khóa học của bạn tại đây. Nó
                                                            phải đáp ứng các tiêu chuẩn chất lượng hình ảnh
                                                            khóa học của chúng tôi để được chấp nhận. Nguyên
                                                            tắc quan trọng: 750x422 pixel; .jpg, .jpeg,. gif
                                                            hoặc .png. không có văn bản trên hình ảnh.</p>
                                                    </div>
                                                    <div class="view_img_right">
                                                        <input id="fuPicture" name="fuPicture" type="file" class="file">
                                                    </div>


                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div style="text-align: center;">
                        <button class="part_btn_save prt-sv" type="submit">Tạo sản phẩm</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script src="https://cdn.tiny.cloud/1/gadw2ei0rmitlbvc2czb6gz78gh505jbkflso0702yy0gdor/tinymce/5/tinymce.min.js"
    referrerpolicy="origin"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/js/fileinput.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/themes/fa/theme.min.js"></script>

<script>
    tinymce.init({
        selector: 'textarea',
        height: 600,
        plugins: 'paste image link autolink lists table media',
        menubar: false,
        toolbar: ['undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright | forecolor backcolor | table link image media'],
    });
</script>
<script>
    $('#fuPicture').fileinput({
        theme: 'fa',
        dropZoneEnabled: false,
        allowedFileExtensions: ['png', 'jpg', 'gif', 'jpeg'],
    })
</script>
